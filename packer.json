{
  "variables": {
    "grav_version": "1.2.0",
    "package_list01": "curl unzip php spawn-fcgi"
  },
  "builders": [{
    "type": "docker",
    "image": "nixos/nix:latest",
    "export_path": "grav-deploy.tar"
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "nix-env -i {{user `package_list01`}}"
    }
  ]
}
